{
  "manifest_version": 2,

  "name": "GT CourseAid",
  "description": "Creates a dropdown menu to help you register for the best courses.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "logo.png"
  },
  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "contextMenus",
    "tabs"
  ]
}
